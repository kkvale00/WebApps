@model _02___BibliotecaWEB.Models.Autore;    <style>        h1 {            text-align: left;            text-transform: uppercase;            color: orange;            text-shadow: 2px 2px 5px black;            font-size: 300%;        }    </style>    <h1> Modifica Autore</h1>    <form action="/Autore/ModificaAutore">        <input name="id" value="@Model.Id" readonly /> <br />        <input type="text" placeholder="Nome.." name="nome" value="@Model.Nome" /> <br>        <input type="text" placeholder="Cognome.." name="cognome" value="@Model.Cognome" /> <br>        <input type="date" name="dob" value="@Model.Dob.ToString("yyyy-MM-dd")" /> <br />        <input type="text" placeholder="Nazione.." name="nazione" value="@Model.Nazione" /> <br>        <input type="submit" value="Modifica" />    </form>