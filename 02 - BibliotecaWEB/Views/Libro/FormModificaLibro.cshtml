@model _02___BibliotecaWEB.Models.Libro;    <style>        h1 {            text-align: left;            text-transform: uppercase;            color: orange;            text-shadow: 2px 2px 5px black;            font-size: 300%;        }    </style><h1> Modifica Libro</h1><form action="/Libro/ModificaLibro">    <input name="id" value="@Model.Id" readonly /> <br />    <input type="text" placeholder="Titolo.." name="titolo" value="@Model.Titolo" /> <br>    <input type="text" placeholder="Genere.." name="genere" value="@Model.Genere" /> <br>    <input type="text" placeholder="Anno.." name="annopubblicazione" value="@Model.Annopubblicazione" /> <br>    <input type="text" placeholder="Lingua.." name="linguaoriginale" value="@Model.Linguaoriginale" /> <br>    <input type="text" placeholder="Copie.." name="copiemagazzino" value="@Model.Copiemagazzino" /> <br>    <input type="text" placeholder="Idautore.." name="idautore" value="@Model.Idautore" /> <br>    <input type="submit" value="Modifica" /></form>